  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@vitest/ui": "^1.3.1",
    "allure-commandline": "^2.27.0",
    "allure-playwright": "^2.12.0",
    "allure-vitest": "^2.12.0",
    "axios": "^1.6.7",
    "dotenv": "^16.4.1",
    "vitest": "^1.3.1"
  }
}