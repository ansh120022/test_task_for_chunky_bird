{
  "name": "test_task_for_chunky_bird",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test:api": "vitest run tests/api",
    "test:ui": "playwright test tests/ui",
    "test": "npm run test:api && npm run test:ui",
    "test:watch": "vitest tests/api",
    "test:ui:debug": "playwright test tests/ui --debug",
